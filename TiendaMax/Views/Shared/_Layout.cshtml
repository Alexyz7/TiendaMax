                         <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="index">Promociones</a>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link text-white dropdown-toggle" href="#" role="button" id="menusecun" data-bs-toggle="dropdown" aria-expanded="false" >Productos</a>


                        
